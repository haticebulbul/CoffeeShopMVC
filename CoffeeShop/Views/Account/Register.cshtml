@model CoffeeShop.Models.Register
@{
    ViewBag.Title = "Coffee Factory";

}

<style>
    body
{
        background-color: antiquewhite;
    }
</style>
<div class="container-fluid pb-5">
    <div class="form-container">
        <h1 class="text-center mb-4">Coffe Factory Üyeliği Oluşturunuz</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <hr />

            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="form-group">
                         
                            @Html.EditorFor(model => model.Isim, new { htmlAttributes = new { @class = "form-control", placeholder = "İsim" } })
                            @Html.ValidationMessageFor(model => model.Isim, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                           
                            @Html.EditorFor(model => model.Soyisim, new { htmlAttributes = new { @class = "form-control", placeholder = "Soyisim" } })
                            @Html.ValidationMessageFor(model => model.Soyisim, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                         
                            @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı Adı" } })
                            @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                           
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                
                            @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre", type = "password" } })
                            @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                       
                            @Html.EditorFor(model => model.SifreTekrar, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password" } })
                            @Html.ValidationMessageFor(model => model.SifreTekrar, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="btn-container text-center mt-4">
                <input type="submit" value="Kullanıcı Oluştur" class="btn btn-primary" />
            </div>
        }
    </div>
</div>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

