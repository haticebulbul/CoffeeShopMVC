@model CoffeeShop.Entity.AksesuarUrun

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Yeni Ürün </h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Ürün Adı:
        <div class="col-md-10">
            @Html.EditorFor(model => model.UrunName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UrunName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ürün Türü:
        <div class="col-md-10">
            @Html.EditorFor(model => model.urunType, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.urunType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ürün Açıklama:
        <div class="col-md-10">
            @Html.EditorFor(model => model.urunAciklama, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.urunAciklama, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ürün Fiyat:
        <div class="col-md-10">
            @Html.EditorFor(model => model.urunFiyat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.urunFiyat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ürün Stok:
        <div class="col-md-10">
            @Html.EditorFor(model => model.urunStok, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.urunStok, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ürün Görsel:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Resim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ürün Kategori:
        <div class="col-md-10">
            @Html.EditorFor(model => model.AksesuarKategoriId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AksesuarKategoriId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top: 20px;">
        <!-- Adjust the margin-top value as needed -->
        <div class="col-md-offset-2 col-md-10">
            <div class="btn-container">
                <input type="submit" value="Yeni Ürün Oluştur" class="btn btn-primary" />
                @Html.ActionLink("Kategori Listesine Geri Dön", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>

</div>
    }

   
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
