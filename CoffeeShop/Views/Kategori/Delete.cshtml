@model CoffeeShop.Entity.Kategori

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .form-container {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    h2 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .action-buttons {
        text-align: center;
        margin-top: 20px;
    }

        .action-buttons a {
            margin-right: 10px;
        }
</style>

<div class="container-fluid">
    <div class="form-container">
        <h2>Delete</h2>

        <h3>Kategoriyi silmek istediğinizden emin misiniz?</h3>
        <div>
            <h4>Kategori</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Kategori İsmi
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.kategoriName)
                </dd>

                <dt>
                    Açıklama
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Aciklama)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions ">
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    @Html.ActionLink("Kategori Listesine Geri Dön", "Index", null, new { @class = "btn btn-warning" })
                </div>
            }
        </div>
    </div>
</div>
