<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/tema/css/style.css">
    <title>@ViewBag.Title</title>
</head>

<body>
    @{
        bool isAuthenticated = Request.IsAuthenticated;
        string userName = User.Identity.Name;
    }

    <header class="p-3 mb-3 border-bottom sticky-top" style="background-color: sienna;">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                  

                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/home" class="nav-link px-2 link-light">Anasayfa</a></li>
                    <li><a href="/home/aksesuar" class="nav-link px-2 link-light">Aksesuar</a></li>
                    <li><a href="/home/kahve" class="nav-link px-2 link-light">Kahve</a></li>
                    <li><a href="/home/hakkimizda" class="nav-link px-2 link-light">Hakkımızda</a></li>
                </ul>

               

                <div class="dropdown text-end">
                    @if (isAuthenticated)
                    {
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/Upload/admin.jpg" width="32" height="32"
                                 class="rounded-circle">
                            <span class="ms-2">@userName</span>
                        </a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="/Cart/Index">Sepet</a></li>
                          
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/Logout">Çıkış</a></li>
                        </ul>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn btn-outline-light me-2 text-decoration-none">Login</a>
                        <a href="/Account/Register" class="btn btn-outline-dark text-decoration-none">Sign-up</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-xxx"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-hSHQPd8NXraKErE8FkSK1ljkLPV33Qcm9+b3QqhpaqVq2Q9Jf3UEfsrImqH2yz2k"
            crossorigin="anonymous"></script>
</body>
</html>



   

   




    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
            </a>
            <span class="mb-3 mb-md-0 text-body-secondary">© 2023 Company, Inc</span>
        </div>

    </footer>


</body>
</html>